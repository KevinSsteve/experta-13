      "form_factor": "wide",
      "label": "Dashboard da Moloja"
    },
    {
      "src": "screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Moloja em dispositivos móveis"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "url": "/dashboard",
      "description": "Ver dashboard de vendas"
    },
    {
      "name": "Produtos",
      "url": "/products",
      "description": "Gerenciar produtos"
    },
    {
      "name": "Estoque",
      "url": "/inventory",
      "description": "Gerenciar estoque"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"]
      },
      "name": "Importar Produtos"
    }
  ],
  "handle_links": "preferred",
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+moloja",
      "url": "/?product=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
    {
      "name": "Moloja Stats",
      "tag": "moloja-stats",
      "description": "Exibe estatísticas de vendas diárias",
      "screenshots": [
        {
          "src": "screenshots/widget.png",
          "sizes": "500x300",
          "label": "Widget de Estatísticas"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  }
